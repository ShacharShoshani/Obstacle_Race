<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".MainMenuActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="@dimen/menu_item_margin_bottom">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/game_mode_SWITCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_buttons_lbl"
                android:textSize="@dimen/small_string_size"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <Button
            android:id="@+id/init_game_BTN"
            android:layout_width="@dimen/main_menu_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/menu_item_margin_bottom"
            android:text="@string/btn_start_game"
            android:textSize="@dimen/default_string_size" />

        <Button
            android:id="@+id/display_records_BTN"
            android:layout_width="@dimen/main_menu_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/display_records"
            android:textSize="@dimen/default_string_size" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>